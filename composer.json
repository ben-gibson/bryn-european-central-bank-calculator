{
  "name": "ben-gibson/bryn-european-central-bank-calculator",
  "description": "An exchange rate calculator for the `PHP` library [Bryn](ben-gibson/bryn) that pulls data from the European Central Bank.",
  "keywords": [
    "currency",
    "conversion",
    "exchange",
    "rate",
    "European Central Bank",
    "calculator"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://github.com/ben-gibson/bryn-european-central-bank-calculator",
  "authors": [
    {
      "name": "Ben Gibson",
      "email": "ben.gibson.2011@gmail.com",
      "homepage": "https://ben-gibson.co.uk"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ben-gibson/bryn"
    }
  ],
  "require": {
    "php": "~7.0",
    "ben-gibson/bryn": "dev-master",
    "php-http/httplug": "^1.1",
    "php-http/client-implementation": "^1.0",
    "php-http/discovery": "^1.2",
    "php-http/client-common": "^1.4"
  },
  "require-dev": {
    "phpunit/phpunit" : "~6.0",
    "squizlabs/php_codesniffer": "~2.3",
    "php-http/mock-client": "^1.0",
    "php-http/guzzle6-adapter": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Gibbo\\Bryn\\Calculator\\ECB\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gibbo\\Bryn\\Calculator\\ECB\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "format": "phpcbf --standard=psr2 src/"
  }
}
